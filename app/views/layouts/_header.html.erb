<header id="main_header">
  <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag("logo.png", class: "logo", style: 'height:50px;width:auto;')%>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="color: white;">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse w-100 order-3 dual-collapse2" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto text-center">
        <% if admin_signed_in? %>
          <li class="nav-item p-sm-4 p-1">
            <%= link_to "My Leagues", leagues_path, class: 'header' %>
          </li>
          <li class="nav-item p-sm-4 p-1">
            <%= link_to "Log out", destroy_admin_session_path, method: :delete, class: 'header' %>
          </li>
        <% else %>
          <li class="nav-item p-sm-4 p-1">
            <%= link_to "Log in", new_admin_session_path, class: 'header' %>
          </li>
          <li class="nav-item p-sm-4 p-1">
            <%= link_to "Sign up", new_admin_registration_path, class: 'header' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
