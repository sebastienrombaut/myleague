<div class="container">
<h2>Create a new league</h2>
  <%= form_for @league, url: {action: 'create'}, html: {class: 'nifty_form'} do |f| %>
    <div class = "form-group">
      <%=f.text_field :name, placeholder: "League name", class: 'form-control'%>
    </div>
    <div class = "form-group">
      <%=f.text_field :sport, placeholder: "Sport", class: 'form-control'%>
  </div>
    <%=f.submit "Create", class: 'btn btn-primary'%>
  <% end %>
</div>