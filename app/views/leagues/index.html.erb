<div class='container pt-7'>
  <h2>Hi <%=current_admin.name %>, here's your leagues</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>League name</th>
        <th>Sport</th>
        <th>Number of players</th>
        <th>Number of games</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @leagues.each do |league|%>
      <tr>
        <td><%= link_to league_path(league) do %>
          <%= league.name %>
          <% end %>
        </td>
        <td><%= league.sport %></td>
        <td><%= league.players.count %></td>
        <td><%= league.matches.count %></td>
        <td><%= link_to players_league_path(league) do %>
          <i class="fas fa-users" data-toggle="tooltip" data-placement="top" title="Show players" id='icon_league1'></i><%end%>
          <%= link_to display_players_league_path(league) do %>
          <i class="fas fa-user-plus" data-toggle="tooltip" data-placement="top" title="Add Players to the League" id='icon_league2'></i><%end%>
          <%= link_to display_new_match_league_path(league) do %>
          <i class="fas fa-plus" data-toggle="tooltip" data-placement="top" title="Add new match" id='icon_league3'></i><%end%>
          <%= link_to match_history_league_path(league) do %>
          <i class="fas fa-history" data-toggle="tooltip" data-placement="top" title="History" id='icon_league4'></i><%end%>
          <%= link_to leaderboard_league_path(league) do %>
          <i class="fas fa-trophy" data-toggle="tooltip" data-placement="top" title="Leaderboard" id='icon_league3'></i><%end%>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>
    <div class="row justify-content-center text-center">
      <div class="col-10">
        <%= link_to new_league_path do %>
        <div class="option_to_choose">
          Create new league
        </div>
        <%end%>
      </div>
    </div>
</div>
